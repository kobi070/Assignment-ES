<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Assignment1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/facebook_blue</item>
        <item name="colorPrimaryVariant">@color/facebook_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/white</item></style>
    <style name="CardBackground"><item name="android:background">@color/white</item></style>
    <style name="ButtonBackgroundTint">
        <item name="android:backgroundTint">@color/facebook_blue</item>
        <item name="android:icon">@drawable/ic_baseline_add_light_24</item>
    </style>
    <style name="ImageGridTint"><item name="android:tint">@color/black</item></style>

    <style name="EditTextBackgroundTint"><item name="android:backgroundTint">@color/facebook_blue</item></style>
    <style name="TextColor"><item name="android:textColor">@color/facebook_blue</item></style>
    <style name="ImageViewTint"><item name="android:tint">@color/facebook_blue</item></style>
    <style name="ImageChange"><item name="android:textColor">@drawable/ic_baseline_light_mode_24</item></style>
    <style name="SwitchMaterialThumb"><item name="android:thumb">@drawable/ic_baseline_light_mode_24</item></style>

</resources>